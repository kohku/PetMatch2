<div class="container">
  <div class="row-fluid">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, class: 'log-page'}) do |f| %>
      <h3>Forgot your password?</h3>

	  <%= devise_error_messages! %>
	  <p>You will receive reset password instructions.</p>

      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= f.email_field :email, { autofocus: true, class: "input-xlarge", placeholder: "someone@example.com" } %>
      </div>

	  <div class="controls form-inline">
	    <%= f.submit "Submit", { class: "btn-u" } %>
	  </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
