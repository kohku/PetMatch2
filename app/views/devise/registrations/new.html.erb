<div class="container">
  <div class="row-fluid">
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'log-page'}) do |f| %>
        <%= devise_error_messages! %>
        <h3>Sign up</h3>
        <div class="input-prepend">
          <span class="add-on"><i class="icon-user"></i></span>
          <%= f.email_field :email, { autofocus: true, class: "input-xlarge", placeholder: "someone@example.com" } %>
        </div>

        <div class="input-prepend">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <span class="add-on"><i class="icon-lock"></i></span>
          <%= f.password_field :password, { autocomplete: "off", class: "input-xlarge", placeholder: "Password"} %>
        </div>

        <div class="input-prepend">
          <span class="add-on"><i class="icon-lock"></i></span>
          <%= f.password_field :password_confirmation, { autocomplete: "off", class: "input-xlarge", placeholder: "Confirm password"} %>
        </div>

        <div class="controls form-inline">
          <%= f.submit "Sign up", { class: "btn-u" } %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
  </div>
</div>